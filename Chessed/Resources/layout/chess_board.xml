<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_dark"
        android:padding="10dp"
        android:layout_above="@id/chessBoard">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:id="@+id/opponentName"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/opponentImage"
        />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person"
            android:contentDescription=""
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/opponentImage"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 ELO"
            android:textColor="#7FFFFFFF"
            android:id="@+id/opponentElo" 
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/opponentImage"
        />
    </RelativeLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="8"
        android:columnCount="8"
        android:layout_centerVertical="true"
        android:id="@+id/chessBoard">
    </GridLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_dark"
        android:padding="10dp"
        android:layout_below="@id/chessBoard">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jane Doe"
                android:id="@+id/playerName"
                android:layout_toLeftOf="@id/playerImage"
            />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/person"
                android:contentDescription=""
                android:layout_marginHorizontal="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/playerImage"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300 ELO"
                android:textColor="#7FFFFFFF"
                android:id="@+id/playerElo"
                android:layout_toRightOf="@id/playerImage"
            />
    </RelativeLayout>
    <LinearLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/flagIcon"
            android:contentDescription=""
            android:scaleType="fitCenter"
            android:backgroundTint="@android:color/transparent"
        />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/handShakeIcon"
            android:contentDescription=""
            android:scaleType="fitCenter"
            android:backgroundTint="@android:color/transparent"
        />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/rb"
            />
    </LinearLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/gameoverScreen"
        android:visibility="invisible"
        android:background="#AA2b2b2b">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="@drawable/roundedcorner"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game over"
                android:layout_gravity="center_horizontal"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black won by checkmate"
                android:id="@+id/gameOverReason"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/newElo"
                android:text="New ELO: "/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/promotionScreen"
        android:visibility="invisible"
        android:background="#AA2b2b2b">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="@drawable/roundedcorner"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a piece for promotion"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/pieces">
                <ImageButton
                    android:src="@drawable/bq"
                    style="@style/promotionButton"
                    android:contentDescription="Queen" />
                <ImageButton
                    style="@style/promotionButton"
                    android:src="@drawable/rb"
                    android:contentDescription="Rook" />
                <ImageButton
                    style="@style/promotionButton"
                    android:src="@drawable/bb"
                    android:contentDescription="Bishop" />
                <ImageButton
                    style="@style/promotionButton"
                    android:src="@drawable/nb"
                    android:contentDescription="Knight" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    
    <!--<Chessed.PromotionMenu android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->
</RelativeLayout>
