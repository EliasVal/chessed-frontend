<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_dark"
        android:padding="10dp"
        android:layout_above="@id/moves">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/opponentName"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/opponentImage"
        />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person"
            android:contentDescription=""
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/opponentImage"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7FFFFFFF"
            android:id="@+id/opponentElo" 
            android:textDirection="ltr"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/opponentImage"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_above="@id/chessBoard"
        android:id="@+id/moves">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:ellipsize="start" />
        </RelativeLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="8"
        android:columnCount="8"
        android:layout_centerVertical="true"
        android:id="@+id/chessBoard">
    </GridLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_dark"
        android:padding="10dp"
        android:layout_below="@id/chessBoard">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playerName"
                android:layout_toLeftOf="@id/playerImage"
            />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/person"
                android:contentDescription=""
                android:layout_marginHorizontal="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/playerImage"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7FFFFFFF"
                android:id="@+id/playerElo"
                android:textDirection="ltr"
                android:layout_toRightOf="@id/playerImage"
            />
    </RelativeLayout>
    <LinearLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:paddingHorizontal="25dp"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2.5dp"
                android:padding="0dp"
                android:src="@drawable/flagIcon"
                android:contentDescription=""
                android:scaleType="fitCenter"
                android:backgroundTint="@android:color/transparent"
                android:onClick="ResignBtn"
                android:tint="@android:color/background_light" 
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resign"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:src="@drawable/handShakeIcon"
                android:contentDescription=""
                android:scaleType="fitCenter"
                android:backgroundTint="@android:color/transparent"
                android:onClick="OfferDrawBtn"
                android:tint="@android:color/background_light" 
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offer_draw"
                android:layout_gravity="center"/>
        </LinearLayout>
<!--        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/rb"
            />-->
    </LinearLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/gameoverScreen"
        android:visibility="gone"
        android:background="#AA2b2b2b">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:background="@drawable/roundedcorner"
            android:id="@+id/gameOverContent"
        >    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_over"
                android:layout_gravity="center_horizontal"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:id="@+id/gameOverReason"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/newElo"
                android:text="@string/new_elo"/>
            
        </LinearLayout>
        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/gameOverContent"
            android:layout_above="@+id/gameOverContent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/close"
            android:contentDescription=""
            android:onClick="ExitBtn"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="end"
    />
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/promotionScreen"
        android:visibility="invisible"
        android:background="#AA2b2b2b">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="@drawable/roundedcorner"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_for_promo"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/pieces">
                <ImageButton
                    android:src="@drawable/bq"
                    style="@style/promotionButton"
                    android:contentDescription="@string/queen" />
                <ImageButton
                    style="@style/promotionButton"
                    android:src="@drawable/rb"
                    android:contentDescription="@string/rook" />
                <ImageButton
                    style="@style/promotionButton"
                    android:src="@drawable/bb"
                    android:contentDescription="@string/bishop" />
                <ImageButton
                    style="@style/promotionButton"
                    android:src="@drawable/nb"
                    android:contentDescription="@string/knight" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    
    <!--<Chessed.PromotionMenu android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->
</RelativeLayout>
